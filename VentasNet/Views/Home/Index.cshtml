<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<!-- Button trigger modal -->
@* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
    INGRESAR
</button> *@
@if (Model.login != true)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal show" tabindex="-1" id="myModal" style="display:inline-block;" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    @* <h5 class="modal-title">Auntentificacion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
                    <h1><strong>VentasNet</strong></h1>
                </div>
                <div class="modal-body">

                    @using (Html.BeginForm("Autenticacion", "Usuario", FormMethod.Post))
                    {
                        @* <div class="mb-4" style="padding-top: 30px; padding-left: 50px;">
                        <h1><strong>VentasNet</strong></h1>
                    </div>
 *@


                        <div class="container-fluid min-vh-50 d-flex justify-content-center align-items-center">

                            <div>
                                @* <br>
                            <br> *@

                                <h3 class="text-center">Login</h3>

                                @Html.LabelFor(model => model.Email)
                                <br>
                                @Html.TextBoxFor(model => model.Email)
                                <br>

                                @Html.LabelFor(model => model.Password)
                                <br>
                                @Html.PasswordFor(model => model.Password)
                                <br>
                                <br>

                                @{
                                    if (Model.login != null)
                                    {
                                        if (Model.login == false)
                                        {

                                            <label>Email o Contraseña incorrectas</label>
                                            <br>
                                        }
                                    }
                                }

                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    }
                    @* @Html.Partial("_Login",Model) *@
                </div>
                @* <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div> *@
            </div>
        </div>
    </div>
}


