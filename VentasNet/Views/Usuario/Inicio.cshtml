@model UsuarioReq
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] VentasNet - Login</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    </head>


    <body>

        @using (Html.BeginForm("Autenticacion", "Usuario", FormMethod.Post))
        {
            <div class="mb-4" style="padding-top: 30px; padding-left: 50px;">
                <h1><strong>VentasNet</strong></h1>
            </div>
            

        
            <div class="container-fluid min-vh-50 d-flex justify-content-center align-items-center">
                
                <div>
                    <br>
                    <br>
                    
                    <h3 class="text-center">Login</h3>

                    @Html.LabelFor(model => model.Email)
                    <br>
                    @Html.TextBoxFor(model => model.Email)
                    <br>

                    @Html.LabelFor(model => model.Password)
                    <br>
                    @Html.PasswordFor(model => model.Password)
                    <br>
                    <br>

                    @{
                        if (Model.login == false)
                        {
                        
                        <label>Email o Contraseña incorrectas</label>
                        <br>
                        }
                    }

                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        }

    </body>

</html>